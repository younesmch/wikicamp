<!DOCTYPE html>
<html>
  <head>
    <title>Wikicamp</title>
    <%= csrf_meta_tags %>

    <meta name="viewport" content="width=device-width", initial-scale=1">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

      <div class="container">
        <ul class="nav nav-tabs">
          <li><%= link_to "WikiCamp", root_path %></li>
          <li><%= link_to "About", about_path %></li>
          <li><%= link_to "Campsites", wikis_path %></li>


    <% if user_signed_in? %>
      Signed in as: <strong><%= current_user.email %></strong> |
      <%= link_to 'Edit profile', edit_user_registration_path, :class => 'navbar-link' %> - <%= link_to "Sign Out", destroy_user_session_path, method: :delete, :class => 'navbar-link'  %>
    <% else %>
      <li> <%= link_to "Sign Up", new_user_registration_path, :class => 'navbar-link navbar-right'  %> </li>
      <li> <%= link_to "Sign In", new_user_session_path, :class => 'navbar-link navbar-right'  %> </li>
    <% end %>


      <% if flash[:notice] %>
        <div class="alert alert-success">
          <button type="button" class="close" data-dismiss="alert">&times;</button>
          <%= flash[:notice] %>
        </div>
      <% elsif flash[:alert] %>
        <div class="alert alert-warning">
          <button type="button" class="close" data-dismiss="alert">&times;</button>
          <%= flash[:alert] %>
        </div>
      <% end %>

    <%= yield %>
    </div>
  </body>
</html>
